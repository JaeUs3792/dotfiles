super + {_,shift +} + {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super+space
	bspc node focused -t "~fullscreen"
super+KP_Add
	bspc config window_gap $(( 5 + `bspc config window_gap` ))
super+KP_Subtract
	bspc config window_gap $(( -5 + `bspc config window_gap` ))

